{% extends 'layouts/base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
		<div class="card shadow-sm p-4" style="min-width: 380px;">
			{% block auth_header %}
				<h1 class="h4 mb-4 text-center">
					{% block auth_heading %}
                    {% if title is defined %}{{ title }}{% else %}Welcome{% endif %}
					{% endblock %}
				</h1>
			{% endblock %}

			{% for type, messages in app.flashes %}
				{% for msg in messages %}
					<div class="alert alert-{{ type == 'error' ? 'danger' : type }}">{{ msg }}</div>
				{% endfor %}
			{% endfor %}

			<div class="container">
				{% block auth_content %}{% endblock %}
			</div>
		</div>
	</div>
{% endblock %}
